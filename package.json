{
  "name": "hack-and-srash",
  "packageManager": "yarn@3.5.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "app/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -A run build",
    "test": "yarn workspaces foreach -A run test:coverage",
    "format:code": "prettier --write './**/*.{js,jsx,ts,tsx,json}'",
    "check:code": "eslint ./app/**/*.{js,jsx,ts,tsx}  --ignore-path .gitignore --quiet",
    "check:types": "yarn workspaces foreach -A run check:types",
    "check:style": "stylelint ./{app,packages}/**/*.scss",
    "check:text": "textlint ./",
    "postinstall": "husky install",
    "generate": "scaffdog generate",
    "commit": "lint-staged && git-cz"
  },
  "volta": {
    "node": "18.16.0",
    "yarn": "3.5.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@workspaces/eslint-config": "workspace:^",
    "@workspaces/prettier-config": "workspace:^",
    "@workspaces/stylelint-config": "workspace:^",
    "@workspaces/tsconfig": "workspace:^",
    "autoprefixer": "^10.4.14",
    "cspell": "^6.31.1",
    "eslint": "^8.42.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "scaffdog": "^2.5.0",
    "stylelint": "^15.7.0",
    "textlint": "^13.3.2",
    "textlint-rule-preset-japanese": "^7.0.0",
    "textlint-rule-preset-jtf-style": "^2.3.13",
    "typescript": "^5.1.3"
  }
}
